<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ecoButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="backgroundTint">@color/colorBoton</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="triviaButtonVerdeStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="backgroundTint">#00E530</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="triviaButtonComposteraStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="backgroundTint">#33B5E5</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="triviaButtonNegroStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="backgroundTint">#E50616</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="triviaButtonEspecialStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="backgroundTint">#E5DC00</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="torchOn">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="torchOff">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Etiquetas">
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>
