    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.app.ecologiate.fragments.InicioFragment">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

            <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_reciclaje"/>

            <TextView
            android:id="@+id/nivelharcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="@string/nivel"
            android:textSize="22dp" />

            <TextView
                android:id="@+id/nivelActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nivelharcode"
                android:text="Novato"
                android:padding="10dp"
                android:textSize="22dp"/>


            <ProgressBar
            android:id="@+id/simpleProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="80"
            android:layout_below="@+id/nivelharcode"
            android:layout_toRightOf="@+id/avatar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:padding="2dp"
            android:layout_marginRight="8dp"
            android:progressTint="@color/colorTexto"
            android:progressBackgroundTint="@color/violetaOscuro"    />

            </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="@color/violetaOscuro"/>

        <RelativeLayout
            android:id="@+id/relativeMetricas"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/tituloMetrica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/metricas"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="20dp"
                               />

            <TextView
                android:id="@+id/tituloArboles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arboles"
                android:layout_below="@+id/tituloMetrica"
                android:padding="6dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/contenidoAboles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tituloArboles"
                android:layout_below="@+id/tituloMetrica"
                android:text="sarasa"
                android:padding="6dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tituloAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloArboles"
                android:text="@string/agua"
                android:padding="6dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/contenidoAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloArboles"
                android:layout_toRightOf="@+id/tituloAgua"
                android:text="sarasa2"
                android:padding="6dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tituloEnergia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloAgua"
                android:text="@string/energia"
                android:padding="6dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/contenidoEnergia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloAgua"
                android:layout_toRightOf="@+id/tituloEnergia"
                android:text="sarasa energia"
                android:padding="6dp"
                android:textSize="20dp"/>

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="@color/violetaOscuro"
            android:layout_marginBottom="5dp"/>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tituloCampanias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/campanias"
                android:gravity="center_horizontal"
                android:textSize="20dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:background="@color/violetaOscuro"
                android:layout_below="@+id/tituloCampanias"
                android:padding="10dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tipFragment"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tituloCampanias"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnReciclar"
            style="@style/ecoButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableLeft="@drawable/ic_reciclaje"
            android:gravity="center"
            android:text="@string/Reciclar"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        </LinearLayout>

        </ScrollView>
</LinearLayout>


