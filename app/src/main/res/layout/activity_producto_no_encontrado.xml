<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.app.ecologiate.ResultadoActivity">


    <TextView
        android:id="@+id/textViewNoEncontrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Producto no encontrado"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center">

        <Button
            android:id="@+id/btnAltaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/borde_redondo"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Alta de Producto"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorBoton" />

        <Button
            android:id="@+id/btnVolverBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/borde_redondo"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Volver a Buscar"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorBoton" />

    </LinearLayout>
</LinearLayout>