<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.app.ecologiate.fragments.ProductoNoEncontradoFragment">

    <TextView
        android:id="@+id/textViewNoEncontrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Producto no encontrado"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center">

        <Button
            android:id="@+id/btnAltaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ecoButtonStyle"
            android:layout_marginRight="10dp"
            android:text="Alta de Producto"/>

        <Button
            android:id="@+id/btnVolverBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ecoButtonStyle"
            android:layout_marginLeft="10dp"
            android:text="Volver a Buscar"/>

    </LinearLayout>

</LinearLayout>
